	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/K-Meech/crosshair/issues</url>
	</issueManagement>
	<ciManagement>
		<system>None</system>
	</ciManagement>
	<properties>
		<package-name>de.embl.schwab.crosshair</package-name>
		<license.licenseName>bsd_2</license.licenseName>
		<license.copyrightOwners>EMBL</license.copyrightOwners>
		<imagej.app.directory>/Applications/Fiji.app/</imagej.app.directory>
		<enforcer.skip>true</enforcer.skip>

		<imagej-utils.version>0.5.3-SNAPSHOT</imagej-utils.version>
